@model Inspired.Web.ViewModel.CategoryViewModel
@{
    ViewBag.Title = "CreateCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Category</h2>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    @Html.AntiForgeryToken()
        <div class="form-group">
            @Html.LabelFor(m => m.Types, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.HiddenFor(model=>model.Category.Id)
                @Html.DropDownListFor(model => model.Category.Type, Model.Types, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Types)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Category.Code, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Category.Code, new { @class = "form-control", placeholder = "Category Code" })
                @Html.ValidationMessageFor(m => m.Category.Code)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Category.Description, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Category.Description, new { @class = "form-control", @placeholder = "Category Description" })
                @Html.ValidationMessageFor(m => m.Category.Description)
            </div>
        </div>
        <div class="row">
            <div class="col-md-12"><br /></div>
        </div>
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-9">
                @Html.ActionLink("Cancel", "CategoryList", null, new { @class = "btn btn-default" })&nbsp;
                <input type="submit" id="register" value="Save" class="btn btn-primary" />
            </div>
        </div>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/antiforgerytoken")
}
