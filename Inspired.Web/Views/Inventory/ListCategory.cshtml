@model IEnumerable<Inspired.Data.Inv_CategoryMaster>

@{
    ViewBag.Title = "ListCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ListCategory</h2>
<script>
    $(function () { $("tabs").tabs(); });
</script>
<div class="nav nav-tabs" id="catTabs">
    <ul class="nav navbar-nav">
        <li><a href="#tabs-1" data-id="1" data-toggle="tab">A</a></li>
        <li><a href="#tabs-2" data-id="2" data-toggle="tab">B</a></li>
        <li><a href="#tabs-3" data-toggle="tab">C</a></li>
    </ul>

    <div class="tab-content" id="tabs">
        <div class="tab-pane" id="tabs-1" data-id="1">
            <div class="container-fluid">
                <div class="span12">
                    <div class="row-fluid">
                        <div class="col-md-12">
                            <p>
                                @Html.ActionLink("Create New", "Create")
                            </p>
                        </div>
                        <div class="col-md-12">
                            <table class="table">
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Code)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Description)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Status)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.User_Id)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Last_Updated)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Gen_CompanyMaster.Company_Code)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Gen_LookupItem.Description)
                                    </th>
                                    <th></th>
                                </tr>

                                @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Code)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Description)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Status)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.User_Id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Last_Updated)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Gen_CompanyMaster.Company_Code)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Gen_LookupItem.Description)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                    </td>
                                </tr>
                            }

                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="tab-pane" id="tabs-2" data-id="2">Tab2</div>
        <div class="tab-pane" id="tabs-3">Tab3</div>
    </div>
</div>
