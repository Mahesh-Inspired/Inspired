@model Inspired.Web.ViewModel.CategoryViewModel
@{
    ViewBag.Title = "CreateCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>CreateCategory</h2>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    @Html.AntiForgeryToken()

    <div class="form-group">
        <div class="col-md-2 col-sm-12 col-md-offset-2">
            @Html.LabelFor(m => m.Types, new { @class = "control-label" })
        </div>
        <div class="col-md-8 col-sm-12">
            @Html.DropDownListFor(model => model.Category.Type, Model.Types, new { @class = "form-control" })        
            @Html.ValidationMessageFor(m => m.Types)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2 col-md-offset-2 ">
            @Html.LabelFor(m => m.Category.Code, new { @class = "control-label" })
        </div>
        <div class="col-md-8">
            @Html.TextBoxFor(model => model.Category.Code, new { @class = "form-control", placeholder = "Category Code" })
            @Html.ValidationMessageFor(m => m.Category.Code)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-2">
            @Html.LabelFor(m => m.Category.Description, new { @class = "control-label" })
        </div>
        <div class="col-md-8">
            @Html.TextBoxFor(model => model.Category.Description, new { @class = "form-control", @placeholder = "Category Description" })
            @Html.ValidationMessageFor(m => m.Category.Description)
        </div>
    </div>
    <div class="row">
        <div class="col-md-offset-4 col-md-8">
            <br />
            @Html.ActionLink("Cancel", "CategoryList", null, new { @class = "btn btn-default" })&nbsp;
            <input type="submit" id="register" value="Create" class="btn btn-primary" />
        </div>
    </div>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/antiforgerytoken")
}
