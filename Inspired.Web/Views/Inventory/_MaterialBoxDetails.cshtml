@model Inspired.Web.ViewModel.MaterialViewModel
<div class="row-fluid">
    <div class="col-md-12"><p class="bg-info">Box details</p></div>
</div>
<div class="row-fluid">
    <div class="col-md-12">
        <div class="container-fluid">
            <div class="row-fluid">
                <div class="col-md-3">
                    @Html.LabelFor(m => m.BoxNumber, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.BoxNumber, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.BoxNumber)
                </div>
                <div class="col-md-3 col-sm-12">
                    @Html.LabelFor(m => m.BoxLength, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.BoxLength, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.BoxLength)
                </div>
                <div class="col-md-3 col-sm-12">
                    @Html.LabelFor(m => m.BoxWidth, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.BoxWidth, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.BoxWidth)
                </div>
                <div class="col-md-3 col-sm-12">
                    @Html.LabelFor(m => m.BoxHeight, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.BoxHeight, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.BoxHeight)
                </div>
            </div>
            <div class="row-fluid">
                <div class="col-md-3 col-sm-12">
                    @Html.LabelFor(m => m.BoxGrossWeight, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.BoxGrossWeight, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.BoxGrossWeight)
                </div>
                <div class="col-md-3 col-sm-12">
                    @Html.LabelFor(m => m.BoxNettWeight, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.BoxNettWeight, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.BoxNettWeight)
                </div>
                <div class="col-md-1 col-sm-12">
                    <br />
                    <input type="button" class="btn btn-success" value="Add" onclick="AddBoxDetails()" />
                </div>
                <div class="col-md-1 col-sm-12" id="divPackDelete">
                    <br />
                    <input type="button" class="btn btn-warning" value="Delete" onclick="ClearPackaging()" />
                </div>
            </div>
            <div class="row-fluid">

            </div>
            <div class="row-fluid">
                <div class="col-md-12">
                    <table class="table" id="PackagingTable">
                        <thead>
                            <tr>
                                <th>@Html.LabelFor(m=>m.BoxNumber)</th>
                                <th>@Html.LabelFor(m => m.BoxLength)</th>
                                <th>@Html.LabelFor(m => m.BoxWidth)</th>
                                <th>@Html.LabelFor(m => m.BoxHeight)</th>
                                <th>@Html.LabelFor(m => m.BoxGrossWeight)</th>
                                <th>@Html.LabelFor(m => m.BoxNettWeight)</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Material != null)
                            {
                                foreach (var box in Model.Material.Inv_MaterialPackaging)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => box.Box_Number)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => box.Box_Length)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => box.Box_Width)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => box.Box_Height)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => box.Box_Gross_Weight)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => box.Box_NETT_Weight)
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


