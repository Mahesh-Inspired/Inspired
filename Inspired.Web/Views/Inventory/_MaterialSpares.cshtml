@model Inspired.Web.ViewModel.MaterialViewModel
<div class="row-fluid">
    <div class="col-md-12">
        <div class="container-fluid">
            <div class="row-fluid">
                <div class="col-md-3">
                    @Html.LabelFor(m => m.SpareItemCode, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.SpareItemCode, new { @class = "form-control", @onblur = "fetchItemDetails('SpareItemCode','SpareItemDesc','SpareItemId');" })
                @Html.ValidationMessageFor(m => m.SpareItemCode)
                </div>
                <div class="col-md-3 col-sm-12">
                    @Html.LabelFor(m => m.SpareItemDesc, new { @class = "control-label" })
                    @Html.HiddenFor(m => m.SpareItemId)
                    @Html.TextBoxFor(m => m.SpareItemDesc, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.SpareItemDesc)
                </div>
                <div class="col-md-3 col-sm-12">
                    @Html.LabelFor(m => m.SpareQuantity, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.SpareQuantity, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.SpareQuantity)
                </div>
                <div class="col-md-3 col-sm-12">
                    @Html.LabelFor(m => m.SparePrice, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.SparePrice, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.SparePrice)
                </div>
            </div>
            <div class="row-fluid">
                <div class="col-md-3 col-sm-12">
                    @Html.LabelFor(m => m.SpareOverview, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.SpareOverview, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.SpareOverview)
                </div>
                <div class="col-md-1 col-sm-12">
                    <br />
                    <input type="button" class="btn btn-success" id="btnAddSpare" value="Add" onclick="AddSpare()" />
                </div>
                <div class="col-md-1 col-sm-12" id="divSpareDelete">
                    <br />
                    <input type="button" class="btn btn-warning" id="btnDelSpare" value="Delete" onclick="ClearSpare()" />
                </div>
            </div>
            <div class="row-fluid">

            </div>
            <div class="row-fluid">
                <div class="col-md-12">
                    <table class="table" id="SpareTable">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Item Code</th>
                                <th>Item Description</th>
                                <th>Spare Quantity</th>
                                <th>Spare Price</th>
                                <th>Overview</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Material != null)
                            {
                                foreach (var spareItem in Model.Material.MaterialSpares)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => spareItem.Spare_Id)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => spareItem.SpareItem.Code)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => spareItem.SpareItem.Description)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => spareItem.Quantity)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => spareItem.Price)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => spareItem.Overview)
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>



