@model Inspired.Web.ViewModel.MaterialViewModel
<div class="row-fluid">
    <div class="col-md-12">
        <div class="container-fluid">
            <div class="row-fluid">
                <div class="col-md-4">
                    @Html.LabelFor(m => m.ListRelativeAlternate, new { @class = "control-label" })
                    @Html.DropDownListFor(m => m.ListRelativeAlternate, Model.ListRelativeAlternate, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.ListRelativeAlternate)
                </div>
                <div class="col-md-4">
                    @Html.LabelFor(m => m.AlternateItemCode, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.AlternateItemCode, new { @class = "form-control", @onblur = "fetchItemDetails('AlternateItemCode','AlternateItemDesc','AlternateItemId');" })
                    @Html.ValidationMessageFor(m => m.AlternateItemCode)
                </div>
                <div class="col-md-4 col-sm-12">
                    @Html.LabelFor(m => m.AlternateItemDesc, new { @class = "control-label" })
                    @Html.HiddenFor(m => m.AlternateItemId)
                    @Html.TextBoxFor(m => m.AlternateItemDesc, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.AlternateItemDesc)
                </div>                
            </div>
            <div class="row-fluid">                
                <div class="col-md-3 col-sm-12">
                    @Html.LabelFor(m => m.AlternateOverview, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.AlternateOverview, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.AlternateOverview)
                </div>
                <div class="col-md-1 col-sm-12">
                    <br />
                    <input type="button" class="btn btn-success" id="btnAddAlternate" value="Add" onclick="AddAlternate()" />
                </div>
                <div class="col-md-1 col-sm-12" id="divAlternateDelete">
                    <br />
                    <input type="button" class="btn btn-warning" id="btnDelAlternate" value="Delete" onclick="ClearAlternate()" />
                </div>
            </div>
            <div class="row-fluid">

            </div>
            <div class="row-fluid">
                <div class="col-md-12">
                    <table class="table" id="AlternateTable">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Alternate/Relative</th>
                                <th>Item Code</th>
                                <th>Item Description</th>
                                <th>Overview</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Material != null)
                            {
                                foreach (var altItem in Model.Material.AlternateRelativeItemCollection)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => altItem.AR_Item_Id)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem=>altItem.AlternateRelativeFlagLookup.Description)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => altItem.MaterialMasterARItemId.Code)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => altItem.MaterialMasterARItemId.Description)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => altItem.Notes)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => altItem.AR_Flag)
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>



